<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.ne.wakwak.as.im97mori.c2" android:versionCode="1114006"
    android:versionName="@string/versionName" android:installLocation="auto">
    <uses-sdk android:targetSdkVersion="12"
        android:minSdkVersion="11" android:maxSdkVersion="13" />
    <supports-screens android:normalScreens="true"
        android:anyDensity="true" android:smallScreens="true"
        android:resizeable="true" android:xlargeScreens="true"
        android:largeScreens="true" />
    <uses-feature android:name="android.hardware.touchscreen"
        android:required="true" />

    <application android:icon="@drawable/icon"
        android:label="@string/appName" android:theme="@android:style/Theme.Holo">
        <activity android:name=".activity.MainActivity">
            <intent-filter android:label="@string/appName">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AlarmSettingActivity"
            android:label="@string/alarmSettingLabelString">
        </activity>
        <activity android:name=".activity.InformationActivity"
            android:theme="@android:style/Theme.Holo.Dialog"
            android:label="@string/informationTitleLabel" />
        <activity android:name=".activity.WidgetConfigurationActivity"
            android:taskAffinity="" android:excludeFromRecents="true"
            android:label="@string/widgetConfigurationTitleString">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AlarmActivity"
            android:theme="@android:style/Theme.Holo.Dialog"
            android:excludeFromRecents="true" android:launchMode="singleInstance"
            android:configChanges="orientation" android:taskAffinity="" />

        <service android:name=".service.AlarmService"
            android:exported="false" />
        <service android:name=".service.ScreenService"
            android:exported="false" />
        <service android:name=".service.WidgetService"
            android:exported="false" />
        <service android:name=".service.WidgetAdapterService"
            android:exported="false" android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name=".receiver.AlarmReceiver">
            <intent-filter>
                <action android:name="jp.ne.wakwak.as.im97mori.c2.ALARM" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.DATE_CHANGED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".receiver.WidgetReceiver">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="jp.ne.wakwak.as.im97mori.c2.IN_CALCULATE" />
                <action android:name="jp.ne.wakwak.as.im97mori.c2.FINISH_CALCULATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/widget_info" />
        </receiver>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
</manifest>